@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<!--===============================================================================================-->
<link rel="icon" type="image/png" href="images/icons/favicon.ico" />
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/login/vendor/bootstrap/css/bootstrap.min.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/login/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/login/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/login/vendor/animate/animate.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/login/vendor/css-hamburgers/hamburgers.min.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/login/vendor/animsition/css/animsition.min.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/login/vendor/select2/select2.min.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/login/vendor/daterangepicker/daterangepicker.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/login/css/util.css">
<link rel="stylesheet" type="text/css" href="~/login/css/main.css">
<!--===============================================================================================-->
<link href="https://fonts.googleapis.com/css?family=Poppins:400,500,700&display=swap" rel="stylesheet">

<div class="limiter">
    <div class="container-login100" style="background: url(/login/images/login-background.jpg); background-position: center; background-repeat:no-repeat; background-size:cover;">
        <div class="wrap-login100">
            <div class="login100-form-title" style="background-image: url(/login/images/bg-01.jpg);">
                <span class="login100-form-title-1">
                    Đăng nhập
                </span>
            </div>

            <form method="post" class="login100-form">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="wrap-input100 m-b-26">
                    <span class="label-input100">Username</span>
                    <input asp-for="Input.Username" class="input100" placeholder="Enter username">
                    <span asp-validation-for="Input.Username" class="text-danger focus-input100"></span>
                </div>

                <div class="wrap-input100 m-b-18">
                    <span class="label-input100">Password</span>
                    <input asp-for="Input.Password" class="input100" placeholder="Enter password">
                    <span asp-validation-for="Input.Password" class="text-danger focus-input100"></span>
                </div>

                <div class="flex-sb-m w-full p-b-30">
                    <div class="contact100-form-checkbox">
                        <input asp-for="Input.RememberMe" class="input-checkbox100" id="ckb1">
                        <label class="label-checkbox100" for="ckb1">
                            Remember me
                        </label>
                    </div>

                    <div>
                        <a asp-page="./ForgotPassword" class="txt1">
                            Forgot your password?
                        </a>
                        <br>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="txt1">
                            Register as a new user
                        </a>
                    </div>
                </div>

                <div class="container-login100-form-btn">
                    <button type="submit" class="login100-form-btn">
                        Đồng ý
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!--===============================================================================================-->
<script src="~/login/vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
<script src="~/login/vendor/animsition/js/animsition.min.js"></script>
<!--===============================================================================================-->
<script src="~/login/vendor/bootstrap/js/popper.js"></script>
<script src="~/login/vendor/bootstrap/js/bootstrap.min.js"></script>
<!--===============================================================================================-->
<script src="~/login/vendor/select2/select2.min.js"></script>
<!--===============================================================================================-->
<script src="~/login/vendor/daterangepicker/moment.min.js"></script>
<script src="~/login/vendor/daterangepicker/daterangepicker.js"></script>
<!--===============================================================================================-->
<script src="~/login/vendor/countdowntime/countdowntime.js"></script>
<!--===============================================================================================-->
<script src="~/login/js/main.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
