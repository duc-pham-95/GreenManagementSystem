@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no, width=device-width">
    <title>@ViewData["Title"] - Greenery Management System</title>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
        #navbar-gms{
                background-color: #03a9f4 !important;
        }
    </style>
</head>
<body>
    <nav id="navbar-gms" class="navbar navbar-expand-sm bg-dark navbar-dark">
        <!-- Brand/logo -->
        <a id="GMS-header" class="navbar-brand mr-auto" asp-area="" asp-controller="Home" asp-action="Index">
            <img src="~/navbar/images/Green symbol.png" style="height: 35px;width: 35px;position: relative;top: -2px; margin-left: 15px;
    margin-right: 15px;" />Greenery Management System
        </a>
        
        <partial name="_LoginPartial" />
    </nav>
    @if (SignInManager.IsSignedIn(User))
    {
        <input id="userAuth" type="hidden" />
        if (User.IsInRole("Admin"))
        {
            <input id="adminAuth" type="hidden" />
        }
    }

    
    @RenderBody()


    @RenderSection("Scripts", required: false)
</body>
</html>
